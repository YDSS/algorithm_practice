    "version": "2.0.0",
    "tasks": [
        {
            "label": "exec",
            "type": "shell",
            "command": "node",
            "args": [
                // "${file}"
                "${relativeFile}"
            ],
            // "group": {
            //     "kind": "build",
            //     "isDefault": true
            // }
        },
        {
            "label": "testcase",
            "type": "shell",
            "command": "jest",
            "args": [
                // "--findRelatedTests",
                // "${file}"
                "${relativeFile}"
            ],
        },
        {
            "label": "buildts",
            "type": "typescript",
            "tsconfig": "tsconfig.json",
            "problemMatcher": [
                "$tsc"
            ],
            "group": "build",
        },
        {
            "label": "runts",
            "type": "shell",
            "command": "node",
            "args": [
                "${fileDirname}/${fileBasenameNoExtension}.js"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "dependsOn":[
                "buildts"
            ]
        }
